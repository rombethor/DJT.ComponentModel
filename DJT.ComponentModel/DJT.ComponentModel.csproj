<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>6.2.2</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Daniel James Thorne</Authors>
    <Description>Additions to the .Net component model, such as datetime annotations, page model, result models and validation extensions</Description>
    <Copyright>Daniel James Thorne</Copyright>
    <RepositoryUrl>https://github.com/rombethor/djt.componentmodel</RepositoryUrl>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

</Project>
